<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chengxusheji.domain">

	<class name="Coupon" table="Coupon">

          <!-- 主键优惠券id -->
          <id name="couponId" column="couponId">
            <generator class="native"/>
          </id>

          <!-- 简单字符串属性: 优惠券名称 -->
          <property
            name="couponName"
            column="couponName"
            type="string"
            length="60"
          />

          <!-- 简单浮点型属性: 金额 -->
          <property
            name="couponMoney"
            column="couponMoney"
            type="float"
          />

          <!-- 多对一属性: 发放商家 -->
          <many-to-one name="sellerObj"
            column="sellerObj"
            class="Seller"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 多对一属性: 发放用户 -->
          <many-to-one name="userObj"
            column="userObj"
            class="UserInfo"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 简单字符串属性: 过期时间 -->
          <property
            name="couponTime"
            column="couponTime"
            type="string"
            length="20"
          />


		 
		
	</class>
	
</hibernate-mapping>
 
