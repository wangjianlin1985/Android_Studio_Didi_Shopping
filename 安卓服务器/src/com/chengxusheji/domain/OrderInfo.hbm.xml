<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chengxusheji.domain">

	<class name="OrderInfo" table="OrderInfo">

          <!-- 主键订单编号 -->
          <id name="orderId" column="orderId">
            <generator class="native"/>
          </id>

          <!-- 多对一属性: 商品信息 -->
          <many-to-one name="productObj"
            column="productObj"
            class="Product"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 简单字符串属性: 配送地点 -->
          <property
            name="arrivePlace"
            column="arrivePlace"
            type="string"
            length="60"
          />

          <!-- 简单浮点型属性: 纬度 -->
          <property
            name="latitude"
            column="latitude"
            type="float"
          />

          <!-- 简单浮点型属性: 经度 -->
          <property
            name="longitude"
            column="longitude"
            type="float"
          />

          <!-- 多对一属性: 订单状态 -->
          <many-to-one name="stateObj"
            column="stateObj"
            class="OrderState"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 简单字符串属性: 联系电话 -->
          <property
            name="telephone"
            column="telephone"
            type="string"
            length="20"
          />

          <!-- 多对一属性: 下单用户 -->
          <many-to-one name="orderUser"
            column="orderUser"
            class="UserInfo"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 简单字符串属性: 下单时间 -->
          <property
            name="addTime"
            column="addTime"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 接单商家 -->
          <property
            name="receiveSeller"
            column="receiveSeller"
            type="string"
            length="60"
          />

          <!-- 简单字符串属性: 接单时间 -->
          <property
            name="receiveTime"
            column="receiveTime"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 附加信息 -->
          <property
            name="memo"
            column="memo"
            type="string"
            length="5000"
          />


		 
		
	</class>
	
</hibernate-mapping>
 
